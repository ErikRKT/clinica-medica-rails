<% content_for :title, "Medicos" %>

<h1>Medicos</h1>

<div id="medicos">
  <% @medicos.each do |medico| %>
    <%= render medico %>
    <p>
      <%= link_to "Show this medico", medico %>
    </p>
  <% end %>
</div>

<p>
  <%= link_to "Gerar PDF", medicos_path(format: :pdf), class: 'btn btn-danger', target: '_blank' %>
</p>

<%= link_to "New medico", new_medico_path %>
