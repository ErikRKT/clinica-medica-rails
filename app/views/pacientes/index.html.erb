
<% content_for :title, "Pacientes" %>

<h1>Pacientes</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Nome</th>
    <th>CPF</th>
    <th>Data de Nascimento</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @pacientes.each do |paciente| %>
    <tr>
      <td><%= paciente.nome %></td>
      <td><%= paciente.cpf %></td>
      <td><%= paciente.data_nascimento %></td>
      <td><%= link_to 'Mostrar', paciente, class: 'btn btn-mini btn-info' %></td>
      <td><%= link_to 'Editar', edit_paciente_path(paciente), class: 'btn btn-mini' %></td>
      <td><%= link_to 'Apagar', paciente, method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-mini btn-danger' %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Paciente', new_paciente_path, class: 'btn btn-primary' %>

<div class="pull-right" style="margin-left: 10px;">
  <%= paginate @pacientes %>
</div>
<div class="pull-right">
  <%= link_to "Gerar CSV", pacientes_path(format: :csv), class: 'btn btn-success' %>
</div>